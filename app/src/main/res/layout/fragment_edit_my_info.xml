<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/kati_light_gray"
    tools:context=".EditMyInfoFragment"
    >

    <com.example.corincoronacheckincustomer.JSHToolBar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="5dp"
        app:button_image="@drawable/jsh_before"
        app:layout_constraintTop_toTopOf="parent"
        app:title="내 정보 수정" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/home_toolbar">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:layout_marginLeft="16dp"
            android:text="개인 정보"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editMyInfo_nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="이름"
            android:padding="8dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/editMyInfo_ageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="나이"
            android:inputType="number"
            android:padding="8dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editMyInfo_nameEditText" />


        <Button
            android:id="@+id/editMyInfo_editButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:text="내 정보 수정"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editMyInfo_genderGroup" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/editMyInfo_genderGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editMyInfo_ageEditText"
            app:selectionRequired="true"
            app:singleSelection="true"
            tools:layout_editor_absoluteX="61dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/editMyInfo_genderSeceret"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="비공개"
                app:chipBackgroundColor="@color/bg_chip"
                app:chipStrokeColor="@color/kati_middle_gray"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/editMyInfo_genderMan"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자"
                app:chipBackgroundColor="@color/bg_chip"
                app:chipStrokeColor="@color/kati_middle_gray"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/editMyInfo_genderWomen"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여자"
                app:chipBackgroundColor="@color/bg_chip"
                app:chipStrokeColor="@color/kati_middle_gray"
                app:chipStrokeWidth="1.5dp" />

        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>