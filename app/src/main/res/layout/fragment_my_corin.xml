<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/corin_lightGray"
    tools:context=".CoronaInfoFragment">

    <com.example.corincoronacheckincustomer.JSHToolBar
        android:id="@+id/jshToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:elevation="5dp"
        app:jshToolBar_title="마이코린" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myCorin_loginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/jshToolbar">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="로그인 하고 코린을 사용해보세요!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/myCorin_loginButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="8dp"
            android:text="로그인"
            app:layout_constraintEnd_toStartOf="@+id/myCorin_signUpButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/myCorin_signUpButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:text="회원가입"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/myCorin_loginButton"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.corincoronacheckincustomer.JSHSelectItem
        android:id="@+id/myCorin_editMyInfo"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:jshSelectItem_title="내 정보 수정"
        app:layout_constraintTop_toBottomOf="@+id/myCorin_loginLayout"
        />

    <com.example.corincoronacheckincustomer.JSHSelectItem
        android:id="@+id/selectItem1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:jshSelectItem_title="코린 안내"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/myCorin_editMyInfo" />

    <com.example.corincoronacheckincustomer.JSHSelectItem
        android:id="@+id/selectItem2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:jshSelectItem_title="서비스 약관"
        app:layout_constraintTop_toBottomOf="@+id/selectItem1" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myCorin_logoutAndSignOutLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectItem2">

        <TextView
            android:id="@+id/myCorin_logoutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="로그아웃"
            app:layout_constraintBottom_toBottomOf="@+id/myCorin_signoutTextView"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/myCorin_signoutTextView" />

        <View
            android:id="@+id/view"
            android:layout_width="0.5dp"
            android:layout_height="10dp"
            android:layout_marginRight="8dp"
            android:background="@color/corin_darkGray"
            app:layout_constraintBottom_toBottomOf="@+id/myCorin_signoutTextView"
            app:layout_constraintEnd_toStartOf="@+id/myCorin_signoutTextView"
            app:layout_constraintTop_toTopOf="@+id/myCorin_signoutTextView" />

        <TextView
            android:id="@+id/myCorin_signoutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:text="회원탈퇴"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>