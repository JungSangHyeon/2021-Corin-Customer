<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/layout_settingSignUpInfo_contentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="전 세계"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settingPrivateInfoLayout_contentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 확진자 수"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_settingSignUpInfo_contentTitle" />

    <TextView
        android:id="@+id/inAndOutInfoItem_totalVisitorValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.73억"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/settingPrivateInfoLayout_contentTitle"
        app:layout_constraintTop_toBottomOf="@+id/settingPrivateInfoLayout_contentTitle" />

    <TextView
        android:id="@+id/inAndOutInfoItem_manVisitorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완치자"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/hb1"
        app:layout_constraintTop_toTopOf="@+id/hb1" />

    <TextView
        android:id="@+id/inAndOutInfoItem_manVisitorValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/inAndOutInfoItem_manVisitorTextView"
        app:layout_constraintTop_toBottomOf="@+id/inAndOutInfoItem_manVisitorTextView" />

    <TextView
        android:id="@+id/inAndOutInfoItem_womenVisitorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사망자"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/hb2"
        app:layout_constraintTop_toTopOf="@+id/hb2" />

    <TextView
        android:id="@+id/inAndOutInfoItem_womenVisitorValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="371만"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/inAndOutInfoItem_womenVisitorTextView"
        app:layout_constraintTop_toBottomOf="@+id/inAndOutInfoItem_womenVisitorTextView" />

    <View
        android:id="@+id/hb1"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@color/corin_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hb2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settingPrivateInfoLayout_contentTitle" />

    <View
        android:id="@+id/hb2"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="@color/corin_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hb1"
        app:layout_constraintTop_toTopOf="@+id/inAndOutInfoItem_manVisitorTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>